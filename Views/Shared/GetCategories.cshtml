@using YemekSiparis.Entities
@model List<Category>


<nav class="navbar navbar-expand-lg bg-body-secondary nav-underline" data-bs-theme="dark">
    <div class="container">
        <a class="navbar-brand" href="/Home"><i class="fa-solid fa-burger-soda">Y</i></a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link" aria-current="page" href="/Home">Anasayfa</a>
                </li>
                <li class="nav-item">
                    <div class="dropdown">
                        <button class="btn dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Ürünler
                        </button>
                        <div class="dropdown-menu" aria-labelledby="DropdownMenuLink">
                            @foreach (var item in Model)
                            {
                                <a class="dropdown-item" href="/Home/Urunler/@item.Id">@item.Name</a>
                            }
                        </div>
                    </div>
                </li>
                @if (User.Identity.IsAuthenticated & User.IsInRole("admin"))
                {
                    <li class="nav-item">
                        <a class="nav-link" href="~/Categories/Index">Kategori Düzenle</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/Products/Index">Ürünleri Düzenle</a>
                    </li>
                }
            </ul>
            <ul class="navbar-nav mr-auto mb-2 mb-lg-0">
                @if (!User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a class="nav-link" href="/Account/Login">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Account/Register">Register</a>
                    </li>
                }

                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a class="nav-link" href="/Account/Logout">Logout</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled" href="#">@User.Identity.Name</a>
                    </li>
                }

            </ul>
        </div>
    </div>
</nav>